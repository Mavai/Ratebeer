<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<% cache "beerlist-#{@order}-#{@direction}", skip_digest: true do %>
    <table class="table table-bordered table-striped table-hover">
      <thead>
      <tr>
        <th><%= link_to 'Name', beers_path(order: 'name') %></th>
        <th><%= link_to 'Style', beers_path(order: 'style') %></th>
        <th><%= link_to 'Brewery', beers_path(order: 'brewery') %></th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, beer %></td>
            <td><%= beer.style.name %></td>
            <td><%= link_to beer.brewery.name, beer.brewery %></td>
            <td><%= link_to 'Edit', edit_beer_path(beer), class: "btn btn-primary btn-xs" %></td>
            <td><%= link_to 'Destroy', beer, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<p>
  <%= link_to "List of Breweries", breweries_path %>
</p>
<br>

<%= link_to('New Beer', new_beer_path) if current_user %>
