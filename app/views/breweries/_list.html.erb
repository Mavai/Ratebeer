<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:'name') %></th>
    <th><%= link_to 'Year', breweries_path(order:'year') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
  <% end %>
  </tbody>
</table>