<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th colspan="1"></th>
    <th>Average</th>
  </tr>
  </thead>

  <tbody>
  <% subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject %></td>
        <td><%= subject.average_rating %></td>
      </tr>
  <% end %>
  </tbody>
</table>